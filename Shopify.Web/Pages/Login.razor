@page "/account/login"
@using Shopify.Models.ViewModels

<EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
    <MudPaper Class="pa-6 mx-auto mt-10" MaxWidth="600px" Elevation="10">
        <MudText Typo="Typo.h5" Class="mb-4">Login</MudText>

        <MudGrid>
            <MudItem xs="12">
                <MudTextField @bind-Value="loginModel.Email" Label="Email" Required="true" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="loginModel.Password" Label="Password" InputType="InputType.Password" Required="true" />
            </MudItem>
        </MudGrid>

        <MudButton Color="Color.Primary" Variant="Variant.Filled" ButtonType="ButtonType.Submit" FullWidth="true" Class="mt-4">
            Login
        </MudButton>
    </MudPaper>
</EditForm>
